{
  "name": "go-errors",
  "version": "1.0.2",
  "description": "Go-style error handling for TypeScript with full type safety and async support",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/src/index.d.ts",
  "typings": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/src/index.js"
      }
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "typescript",
    "error-handling",
    "golang",
    "go",
    "errors",
    "functional",
    "async",
    "promise",
    "result-type",
    "exception-handling",
    "error-monad"
  ],
  "author": "Ashkan Samadiyan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashkansamadiyan/go-style-errors.git"
  },
  "bugs": {
    "url": "https://github.com/ashkansamadiyan/go-style-errors/issues"
  },
  "homepage": "https://github.com/ashkansamadiyan/go-style-errors#readme",
  "devDependencies": {
    "@types/node": "^22.13.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
